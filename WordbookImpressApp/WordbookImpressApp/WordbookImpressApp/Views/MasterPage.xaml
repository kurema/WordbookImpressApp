<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="メニュー"
             x:Class="WordbookImpressApp.Views.MasterPage">
    <ContentPage.Content>
        <ListView x:Name="ListViewMenuItems"
              SeparatorVisibility="Default"
              HasUnevenRows="true"
                  ItemSelected="ListViewMenuItems_ItemSelected"
              ItemsSource="{Binding MenuItems}">
            <ListView.Header>
                <Image Source="Title.png" HorizontalOptions="Fill"/>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Margin="10" Source="{Binding Icon}" HeightRequest="30" WidthRequest="30" VerticalOptions="FillAndExpand"  Grid.Column="0"/>
                            <StackLayout Padding="0,15" HorizontalOptions="FillAndExpand" Grid.Column="1">
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label VerticalOptions="FillAndExpand" 
                    VerticalTextAlignment="Center" 
                    Text="{Binding Title}" TextColor="Black"
                    FontSize="Medium"/>
                                    <Label VerticalOptions="FillAndExpand" 
                    VerticalTextAlignment="Center" 
                    Text="{Binding Description}" TextColor="Gray"
                    FontSize="Small"/>
                                </StackLayout>
                            </StackLayout>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>