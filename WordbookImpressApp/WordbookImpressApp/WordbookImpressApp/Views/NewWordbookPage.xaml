<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordbookImpressApp.Views.NewWordbookPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="AddItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="URL" FontSize="Medium" />
            <Entry Text="{Binding WordbookInfo.Url}" FontSize="Medium" />
            <Label Text="ID" FontSize="Medium" />
            <Editor Text="{Binding WordbookInfo.ID}" FontSize="Medium" />
            <Label Text="Password" FontSize="Medium" />
            <Editor Text="{Binding WordbookInfo.Password}" FontSize="Medium" />
            <!--<Button Text="Save" Clicked="ToolbarItem_Clicked"/>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>