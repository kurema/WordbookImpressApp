<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WordbookImpressApp.Views.QuizWordChoicePreparePage"
             Title="クイズ">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollView>
                <StackLayout Grid.Row="0">
                    <Image Source="{Binding WordbookTargetViewModel.UriLogo}" HeightRequest="150" HorizontalOptions="FillAndExpand" Aspect="AspectFit"/>
                    <Label Text="{Binding WordbookTargetViewModel.WordbookTitle}" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold"/>
                    <StackLayout Orientation="Horizontal">
                        <Switch IsToggled="{Binding SkipChecked}"/>
                        <Label VerticalOptions="Center" Text="チェック済みをスキップ"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
            <StackLayout Grid.Row="1">
                <Button Text="クイズ開始" Clicked="Button_Clicked"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>